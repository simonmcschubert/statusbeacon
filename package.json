{
  "name": "statusbeacon",
  "version": "0.1.0",
  "description": "Lightweight self-hosted status page for monitoring services",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "db:migrate": "tsx server/db/migrate.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "statusbeacon",
    "status-page",
    "monitoring",
    "uptime"
  ],
  "author": "Simon Schubert",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dns2": "^2.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.9.1",
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^10.3.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.3",
    "ws": "^8.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=20.4.0"
  }
}
